{
	"name": "css-js-minifier",
	"displayName": "JS & CSS Minifier Tool and Compressor",
	"description": "Minify CSS and JS files directly within Visual Studio Code using the Toptal API. This extension simplifies the process of optimizing your code by providing easy-to-use commands for minification.",
	"version": "0.0.3",
	"publisher": "miguel-colmenares",
	"sponsor": {
		"url": "https://github.com/sponsors/miguelcolmenares"
	},
	"icon": "images/icon.png",
	"license": "MIT",
	"author": {
		"name": "Miguel Colmenares",
		"email": "me@miguelcolmenares.com"
	},
	"galleryBanner": {
		"color": "#232323",
		"theme": "dark"
	},
	"engines": {
		"vscode": "^1.90.0"
	},
	"categories": [
		"Other"
	],
	"keywords": [
		"minify",
		"minifier",
		"formatter",
		"format",
		"compressor",
		"compress",
		"css",
		"javascript",
		"js"
	],
	"activationEvents": [
		"onSaveTextDocument"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.minify",
				"title": "Minify this File"
			},
			{
				"command": "extension.minifyInNewFile",
				"title": "Minify and Save as New File"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "extension.minify",
					"when": "resourceLangId == css || resourceLangId == javascript",
					"group": "_CSS&JSMinifier"
				},
				{
					"command": "extension.minifyInNewFile",
					"when": "resourceLangId == css || resourceLangId == javascript",
					"group": "_CSS&JSMinifier"
				}
			],
			"explorer/context": [
				{
					"command": "extension.minify",
					"when": "resourceLangId == css || resourceLangId == javascript",
					"group": "_CSS&JSMinifier"
				},
				{
					"command": "extension.minifyInNewFile",
					"when": "resourceLangId == css || resourceLangId == javascript",
					"group": "_CSS&JSMinifier"
				}
			]
		},
		"configuration": {
			"type": "object",
			"title": "Minifier Configuration",
			"properties": {
				"css-js-minifier.minifyOnSave": {
					"type": "boolean",
					"default": false,
					"description": "Minify files automatically on save."
				},
				"css-js-minifier.minifyInNewFile": {
					"type": "boolean",
					"default": false,
					"description": "Save minified content in a new file."
				},
				"css-js-minifier.minifiedNewFilePrefix": {
					"type": "string",
					"default": ".min",
					"enum": [
						".min",
						"-min",
						".compressed",
						"-compressed",
						".minified",
						"-minified"
					],
					"enumDescriptions": [
						"The new file name will have the '.min' extension.",
						"The new file name will have the '-min' extension.",
						"The new file name will have the '.compressed' extension.",
						"The new file name will have the '-compressed' extension.",
						"The new file name will have the '.minified' extension.",
						"The new file name will have the '-minified' extension."
					],
					"description": "Prefix for the minified new file. The extension will be the same as the original file. Only applies when saving minified content in a new file."
				}
			}
		},
		"keybindings": [
			{
				"command": "extension.minify",
				"key": "ctrl+alt+m",
				"mac": "cmd+option+m",
				"linux": "ctrl+alt+m",
				"win": "ctrl+alt+m",
				"when": "editorTextFocus && !editorReadonly"
			},
			{
				"command": "extension.minifyInNewFile",
				"key": "ctrl+alt+n",
				"mac": "cmd+option+n",
				"linux": "ctrl+alt+n",
				"win": "ctrl+alt+n",
				"when": "editorTextFocus && !editorReadonly"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"copy-fixtures": "cp -r ./src/test/fixtures ./out/test/fixtures/",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint && npm run copy-fixtures",
		"lint": "eslint src --ext ts",
		"test": "vscode-test"
	},
	"devDependencies": {
		"@types/mocha": "^10.0.6",
		"@types/node": "^18.19.34",
		"@types/vscode": "^1.90.0",
		"@typescript-eslint/eslint-plugin": "^7.11.0",
		"@typescript-eslint/parser": "^7.11.0",
		"@vscode/test-cli": "^0.0.9",
		"@vscode/test-electron": "^2.4.0",
		"eslint": "^8.57.0",
		"mocha": "^10.4.0",
		"ts-loader": "^9.5.1",
		"typescript": "^5.4.5",
		"webpack": "^5.91.0",
		"webpack-cli": "^5.1.4"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/miguelcolmenares/css-js-minifier.git"
	},
	"bugs": {
		"url": "https://github.com/miguelcolmenares/css-js-minifier/issues"
	},
	"homepage": "https://github.com/miguelcolmenares/css-js-minifier#readme"
}
